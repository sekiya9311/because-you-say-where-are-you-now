<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="srcMailAddress"
                type="String"
        />
    </data>
    <FrameLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="64dp">
        <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@{srcMailAddress}"
        />
    </FrameLayout>
</layout>